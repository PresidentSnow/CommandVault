$TTL 43200	; 12 hours
@	IN	SOA	ns1.localclass.sri. admin.localclass.sri. (
			2024111401	; Serial
			18000		; Refresh 5 hours (18000)
			1800		; Retry 30 minutes (1800)
			2592000		; Expire 1 month (2592000)
			43200		; Negative cache TTL 12 horas
			)

